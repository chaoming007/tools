</div>

<script type="text/javascript" src="js/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="js/tab.js"></script>
<script type="text/javascript">

/* 
	cls:"active",      //默认选中样式名称
	evt:"mouseover",   //默认切换事件
	autoplay:false,     //是否自动切换
	tim:3000,           //自动切换的时间
	check:0             //默认选中第一个
*/

$(".tab1").TabBox();
$(".tab2").TabBox({
	evt:"click",
	autoplay:true
});
$(".tab3").TabBox({
	evt:"click",
	check:1
});

</script>

</body>
</html>